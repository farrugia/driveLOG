<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.design3.log.ListJourneysActivity" />

    <ListView android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:drawSelectorOnTop="false"/>

    <Button
        android:layout_margin="@dimen/default_padding"
        android:id="@+id/button_add_journey"
        android:text="@string/button_begin_journey"
        android:drawableLeft="@drawable/image_add_white"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_regular_plus"
        android:onClick="addJourney"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:paddingLeft="5dp"
        android:background="@drawable/buttonshape"
        android:gravity="left|center_vertical"
        android:drawablePadding="15dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"/>

</RelativeLayout>